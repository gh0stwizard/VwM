@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Lcz
@{
    ViewData["Title"] = Lcz["Title"];
    var language = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
}

<h3 class="text-center">@ViewData["Title"]</h3>

<table id="devices" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>@Lcz["Id"]</th>
            <th>@Lcz["Name"]</th>
            <th>@Lcz["Description"]</th>
            <th width="50%">@Lcz["Hostname"]</th>
        </tr>
    </thead>
</table>


@section Styles {
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/css/datatables.css" />
        <link rel="stylesheet" type="text/css" href="~/css/device/list.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
        <link rel="stylesheet" type="text/css" href="~/css/device/list.css" asp-append-version="true" />
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script type="text/javascript" src="~/js/datatables.js"></script>
        <script type="text/javascript" src="~/js/device/list.js"></script>
        <script type="text/javascript" src="@($"/js/resources/glob.{language}.js")"></script>
        <script type="text/javascript" src="@($"/js/resources/shared/datatables.{language}.js")"></script>
        <script type="text/javascript" src="@($"/js/resources/device/list.{language}.js")"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/datatables.min.js"></script>
        <script type="text/javascript" src="~/js/device/list.min.js" asp-append-version="true"></script>
        <script type="text/javascript" src="@($"/js/resources/device/list.{language}.min.js")" asp-append-version="true"></script>
    </environment>
}

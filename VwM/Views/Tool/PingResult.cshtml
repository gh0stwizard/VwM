@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Lcz
@model PingResultViewModel
@{
    ViewData["Title"] = Lcz["Title"];
    var language = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
}

<h3 class="text-center">@ViewData["Title"]</h3>

@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.Total)

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Lcz["Name"]</th>
            <th>@Lcz["Hostname"]</th>
            <th width="50%">@Lcz["Result"]</th>
        </tr>
    </thead>
</table>

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" type="text/css" href="~/css/datatables.css" />
        <link rel="stylesheet" type="text/css" href="~/css/tool/ping-result.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" type="text/css" href="~/css/datatables.min.css" />
        <link rel="stylesheet" type="text/css" href="~/css/tool/ping-result.min.css" asp-append-version="true" />
    </environment>
}

@section Scripts {
    <environment include="Development">
        <script type="text/javascript" src="~/js/datatables.js"></script>
        <script type="text/javascript" src="~/js/datatables/plugins/sort-versions.js"></script>
        <script type="text/javascript" src="~/lib/signalr/dist/browser/signalr.js"></script>
        <script type="text/javascript" src="~/js/tool/ping-result.js"></script>
        <script type="text/javascript" src="@($"/js/resources/glob.{language}.js")"></script>
        <script type="text/javascript" src="@($"/js/resources/shared/measures.{language}.js")"></script>
        <script type="text/javascript" src="@($"/js/resources/shared/progressbar.{language}.js")"></script>
    </environment>
    <environment exclude="Development">
        <script type="text/javascript" src="~/js/datatables.min.js"></script>
        <script type="text/javascript" src="~/js/datatables/plugins/sort-versions.min.js"></script>
        <script type="text/javascript" src="~/lib/signalr/dist/browser/signalr.min.js"></script>
        <script type="text/javascript" src="~/js/tool/ping-result.js"></script>
        <script type="text/javascript" src="@($"/js/resources/tool/ping-result.{language}.min.js")"></script>
    </environment>
}
